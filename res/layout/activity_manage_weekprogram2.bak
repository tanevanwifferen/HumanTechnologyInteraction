<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:gravity="center">
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <TextView
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="Vacation mode"
	        	android:textSize="20sp"/>
	        
	        <ToggleButton
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:textOn="On"
	        	android:textOff="Off"
	        	android:checked="false"
	        	android:id="@+id/vacation_mode_togglebutton"/>
	        
	    </LinearLayout>
	    
	    <TextView
	        android:id="@+id/vacation_mode_textView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="Current temperature"
	        android:visibility="gone"/>
	    
	    <TextView
	        android:id="@+id/vacation_mode_temperature"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:visibility="gone"/>
	    
	    <SeekBar
	        android:id="@+id/vacation_mode_seekBar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:visibility="gone" />
	    
	   	<Button
	        android:id="@+id/monday_button"
			style="@style/WeekDays"
	        android:text="Monday"
	        android:onClick="toOverview" />
	
	    <Button
	        android:id="@+id/tuesday_button"
			style="@style/WeekDays"
	        android:text="Tuesday"
	        android:onClick="toOverview" />
	
	    <Button
	        android:id="@+id/wednesday_button"
			style="@style/WeekDays"
	        android:text="Wednesday"
	        android:onClick="toOverview"  />
	
	    <Button
	        android:id="@+id/thursday_button"
			style="@style/WeekDays"
	        android:text="Thursday"
	        android:onClick="toOverview"  />
	
	    <Button
	        android:id="@+id/friday_button"
			style="@style/WeekDays"
	        android:text="Friday"
	        android:onClick="toOverview"  />
	        
	    <Button
	        android:id="@+id/saturday_button"
			style="@style/WeekDays"
	        android:text="Saturday"
	        android:onClick="toOverview"  />
	
	    <Button
	        android:id="@+id/sunday_button"
			style="@style/WeekDays"
	        android:text="Sunday"
	        android:onClick="toOverview"  /> 
	
	</LinearLayout>
</ScrollView>
